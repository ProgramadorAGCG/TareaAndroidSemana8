<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/man"
    android:orientation="vertical"
    tools:context=".Empleado">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CODIGO EMPLEADO"
        android:textColor="@android:color/black"
        android:textSize="11sp"
        android:textStyle="bold"
        app:fontFamily="@font/aldrich" />

    <EditText
        android:id="@+id/txtcodemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="15sp"
        app:fontFamily="@font/aldrich"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CODIGO DISTRITO"
        android:textColor="@android:color/black"
        android:textSize="11sp"
        android:textStyle="bold"
        app:fontFamily="@font/aldrich" />

    <EditText
        android:id="@+id/txtcoddis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="15sp"
        app:fontFamily="@font/aldrich"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="APELLIDO"
        android:textColor="@android:color/black"
        android:textSize="11sp"
        android:textStyle="bold"
        app:fontFamily="@font/aldrich" />

    <EditText
        android:id="@+id/txtape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="15sp"
        app:fontFamily="@font/aldrich"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NOMBRE"
        android:textColor="@android:color/black"
        android:textSize="11sp"
        android:textStyle="bold"
        app:fontFamily="@font/aldrich" />

    <EditText
        android:id="@+id/txtnom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="15sp"
        app:fontFamily="@font/aldrich"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DIRECCION"
        android:textColor="@android:color/black"
        android:textSize="11sp"
        android:textStyle="bold"
        app:fontFamily="@font/aldrich"/>

    <EditText
        android:id="@+id/txtdir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="15sp"
        app:fontFamily="@font/aldrich"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TELEFONO"
        android:textColor="@android:color/black"
        android:textSize="11sp"
        android:textStyle="bold"
        app:fontFamily="@font/aldrich" />

    <EditText
        android:id="@+id/txttel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="15sp"
        app:fontFamily="@font/aldrich"/>

    <Button
        android:id="@+id/bIngresar"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:onClick="ingresar"
        android:text="INGRESAR"
        android:textSize="12sp"
        app:fontFamily="@font/aldrich"/>

    <Button
        android:id="@+id/bModificar"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:onClick="modificar"
        android:text="MODIFICAR"
        android:textSize="12sp"
        app:fontFamily="@font/aldrich"/>

    <Button
        android:id="@+id/bEliminar"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:onClick="eliminar"
        android:text="ELIMINAR"
        android:textSize="12sp"
        app:fontFamily="@font/aldrich"/>

    <Button
        android:id="@+id/bConsultar"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:onClick="consultar"
        android:text="CONSULTAR"
        android:textSize="11sp"
        app:fontFamily="@font/aldrich"/>
</LinearLayout>